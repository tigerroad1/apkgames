name: Fetch API Data

on:
  schedule:
    - cron: '0 0 * * *' # Exécute tous les jours à minuit
  workflow_dispatch: # Permet de déclencher manuellement le workflow

jobs:
  fetch_data:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Fetch API Data
        run: |
          # Remplacez l'URL par l'endpoint de votre API
          curl -s https://api.example.com/data -o api_data.json

      - name: Commit and push data
        run: |
          git config --global user.name "GitHub Actions Bot"
          git config --global user.email "actions@github.com"
          git add api_data.json
          git commit -m "Update API data"
          git push
        env:
          # Utilisez un token pour autoriser le push
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
